use_frameworks!
platform :ios, '10.0'
install! 'cocoapods', :share_schemes_for_development_pods => true

pod 'ConsentViewController', :path => '../'

abstract_target 'Examples' do
  pod 'SwiftLint'
  pod 'Wormholy'

  target 'AuthExample' do; end
  target 'NativeMessageExample' do; end
  target 'ObjC-ExampleApp' do; end

  target 'ConsentViewController_Example' do
    pod 'JSONView'
  end

  target 'SourcepointFirebaseDemo' do
    pod 'FirebaseAnalytics'
  end

  target 'NativePMExampleApp' do
    platform :tvos, '12.0'
  end

  target 'SourcePointMetaApp' do
    pod 'IQKeyboardManagerSwift'
  end
end

abstract_target 'Tests' do
  pod 'Quick'
  pod 'Nimble'

  target 'ConsentViewController_ExampleTests' do; end
  target 'SPGDPRExampleAppUITests' do; end
  target 'NativeMessageExampleUITests' do; end
  target 'AuthExampleUITests' do; end
  target 'SourcePointMetaAppUITests' do; end
  target 'ObjC-ExampleAppUITests' do; end

  target 'NativePMExampleAppUITests' do
    platform :tvos, '12.0'
  end

  abstract_target 'FirebaseTests' do
    pod 'FirebaseAnalytics'

    target 'SourcepointFirebaseDemoTests' do; end
    target 'SourcepointFirebaseDemoUITests' do; end
  end
end

